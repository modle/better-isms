extends layout

block content
    h1= title
    p Better Isms

    // Wrapper
    #wrapper

        // ISM LIST
        h2 Isms
        #ismList
            table
                thead
                    th source
                    th page number
                    th tags
                    th quote
                    th comments
                    th U
                    th D
                tbody
        // /ISM LIST

        // ADD ISM
        h2 Add Ism
        #addIsm
          .form-container-wrapper
            fieldset.form-container
                input#inputSource(type='text', placeholder='book title, etc').form-field
                br
                input#inputNumber(type='text', placeholder='page number').form-field
                br
                input#inputTags(type='text', placeholder='tags').form-field
                br
                textarea#inputQuote(type='textarea', placeholder='quote or note', rows=10).form-field
                br
                textarea#inputComments(type='textarea', placeholder='comments', rows=10).form-field
                br
                button#btnAddIsm Add Ism
        // /ADD ISM
        br
        br
        // UPDATE ISM
        h2 Update Ism
        #updateIsm
          .form-container-wrapper
            fieldset.form-container
                strong ism to update:
                |  <span id='ismBeingUpdated'></span>
                br
                input#updateSource(type='text', placeholder='book title, etc').form-field
                br
                input#updateNumber(type='text', placeholder='page number').form-field
                br
                input#updateTags(type='text', placeholder='tags').form-field
                br
                textarea#updateQuote(type='textarea', placeholder='quote or note', rows='10').form-field
                br
                textarea#updateComments(type='textarea', placeholder='comments', rows=10).form-field
                br
                button#btnUpdateIsm Update Ism
        // /UPDATE ISM

    // /WRAPPER
