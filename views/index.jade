extends layout

block content
  h1= title

  // Wrapper
  #wrapper

    // LOGGED OUT TOAST
    .modal#loggedOutModal
      br
      br
      br
      br
      .modal-container.modal-toast
        h1 You have been logged out
    // /LOGGED OUT TOAST

    // ISM DELETED TOAST
    .modal#ismDeletedModal
      br
      br
      br
      br
      .modal-container.modal-toast
        h1 Ism deleted
    // /ISM DELETED TOAST

    // SOURCE SELECT
    .modal#sourceSelectModal
      br
      br
      br
      br
      .modal-container
        .form-container-wrapper
          h1 Add to which source?
          #sourceListDiv
          button#newSource.submit-button Add New Source
    // SOURCE SELECT

    // ADD SOURCE FORM
    .modal#newSourceModal
      br
      br
      br
      br
      .modal-container
        #addSourceForm
          .form-container-wrapper
            fieldset.form-container
              h1 Add new source
              input#inputTitle(type='text', placeholder='title').form-field
              br
              input#inputAuthor(type='text', placeholder='author').form-field
              br
              button#btnSubmitAddSource.submit-button Add Source
    // /ADD SOURCE FORM

    // LOGIN FORM
    .modal#loginModal
      br
      br
      br
      br
      .modal-container
        #loginForm
          .form-container-wrapper
            fieldset.form-container
              h1 Please log in to complete this action
              input#inputUsername(type='text', placeholder='username').form-field
              br
              input#inputPassword(type='password', placeholder='password').form-field
              br
              button#btnSubmitLogin.submit-button Login
    // /LOGIN FORM

    button#newIsm.submit-button New Ism
    button#newSource2.submit-button New Source
    button#logout.submit-button Logout
    button#login.submit-button Login
    br
    br
    br
    #sourceCloud
    br
    #tagCloud
    br
    button#showAll.submit-button(value='') Show All

    // ISM FORM
    .modal#formModal
      br
      br
      br
      br
      .modal-container
        #addOrUpdateIsm
          .form-container-wrapper
            h1#sourceTitle
            fieldset.form-container
              span *&nbsp;
              input#inputNumber(type='text', placeholder='page number', value='').form-field
              br
              span *&nbsp;
              input#inputTags(type='text', placeholder='tags', value='').form-field
              br
              span *&nbsp;
              br
              textarea#inputQuote(type='textarea', placeholder='quote or note', rows=10, value='').form-field
              br
              textarea#inputComments(type='textarea', placeholder='comments', rows=10, value='').form-field
              br
              button#btnAddOrUpdateIsm.submit-button Add or Update Ism
              button#btnClearIsm.submit-button Clear
    // /ISM FORM

    // ISM LIST
    hr
    #ismList
      isms
    // /ISM LIST

    a(href="#").submit-button back to top
  // /WRAPPER
