extends layout

block content
  h1= title

  button#newIsm.submit-button New Ism
  br
  br
  br
  input#filter(type='text', placeholder='type your filter query').form-field
  button#applyFilter.submit-button Go

  // Wrapper
  #wrapper

    // ISM FORM
    .modal#formModal
      br
      br
      br
      br
      .modal-form
        h2#addOrUpdateIsmHeader Ism
        #addOrUpdateIsm
          .form-container-wrapper
            fieldset.form-container
              input#inputSource(type='text', placeholder='book title, etc').form-field
              br
              input#inputNumber(type='text', placeholder='page number').form-field
              br
              input#inputTags(type='text', placeholder='tags').form-field
              br
              textarea#inputQuote(type='textarea', placeholder='quote or note', rows=10).form-field
              br
              textarea#inputComments(type='textarea', placeholder='comments', rows=10).form-field
              br
              button#btnAddOrUpdateIsm.submit-button Add or Update Ism
              button#btnClearIsm.submit-button Clear
    // /ISM FORM

    // ISM LIST
    hr
    #ismList
      isms
    // /ISM LIST

    a(href="#").submit-button back to top
  // /WRAPPER
